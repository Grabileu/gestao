    "irrf_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Calcular IRRF"
    },
    "vt_discount_percent": {
      "type": "number",
      "default": 6,
      "description": "Desconto VT (%)"
    },
    "vt_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Desconto VT ativo"
    },
    "vr_value": {
      "type": "number",
      "default": 0,
      "description": "Valor do VR"
    },
    "vr_discount_percent": {
      "type": "number",
      "default": 0,
      "description": "Desconto VR (%)"
    }
  },
  "required": [
