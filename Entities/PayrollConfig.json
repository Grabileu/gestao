{
  "name": "PayrollConfig",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "default": "default",
      "description": "Nome da configura\u00e7\u00e3o"
    },
    "work_hours_per_day": {
      "type": "number",
      "default": 8,
      "description": "Horas de trabalho por dia"
    },
    "work_days_per_month": {
      "type": "number",
      "default": 22,
      "description": "Dias \u00fateis por m\u00eas"
    },
    "overtime_50_percent": {
      "type": "number",
      "default": 50,
      "description": "Percentual hora extra 50%"
    },
    "overtime_100_percent": {
      "type": "number",
      "default": 100,
      "description": "Percentual hora extra 100%"
    },
    "absence_discount_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Descontar faltas"
    },
    "medical_certificate_discount": {
      "type": "boolean",
      "default": false,
      "description": "Descontar atestados"
    },
    "inss_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Calcular INSS"
