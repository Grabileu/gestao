{
  "name": "CashBreak",
  "type": "object",
  "properties": {
    "date": { "type": "string", "format": "date", "description": "Data da quebra" },
    "store_id": { "type": "string", "description": "ID da loja" },
    "store_name": { "type": "string", "description": "Nome da loja" },
    "employee_id": { "type": "string", "description": "ID do funcionário/operador" },
    "employee_name": { "type": "string", "description": "Nome do funcionário/operador" },
    "payment_type": { "type": "string", "enum": ["cash", "credit", "debit", "subsidy", "food_voucher", "pos", "customer_credit", "pix"], "default": "cash", "description": "Tipo de finalizadora" },
    "type": { "type": "string", "enum": ["shortage", "surplus"], "default": "shortage", "description": "Tipo: falta ou sobra" },
    "amount": { "type": "number", "description": "Valor da quebra/diferença" },
    "voucher_lost": { "type": "boolean", "default": false, "description": "Comprovante perdido" },
    "voucher_lost_count": { "type": "number", "default": 1, "description": "Quantidade de comprovantes perdidos" },
    "voucher_lost_value": { "type": "number", "default": 0, "description": "Valor do comprovante perdido" },
    "voucher_paid": { "type": "boolean", "default": false, "description": "Valor do comprovante foi pago" },
    "penalty_amount": { "type": "number", "default": 0, "description": "Valor da multa/desconto" },
    "total_discount": { "type": "number", "default": 0, "description": "Total a descontar" },
    "reason": { "type": "string", "description": "Motivo da quebra" },
    "voucher_number": { "type": "string", "description": "Número do vale" },
    "voucher_status": { "type": "string", "enum": ["pending", "paid", "cancelled"], "default": "pending", "description": "Status do vale" }
  },
  "required": ["date", "store_id", "employee_id", "type", "amount"]
}
