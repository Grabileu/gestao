{
  "name": "CeasaProduct",
  "type": "object",
  "properties": {
    "name": { "type": "string", "description": "Nome do produto/fruta" },
    "supplier_id": { "type": "string", "description": "ID do fornecedor" },
    "supplier_name": { "type": "string", "description": "Nome do fornecedor" },
    "unit_type": { "type": "string", "enum": ["kg", "unit", "box", "dozen"], "default": "kg", "description": "Tipo de unidade" },
    "cost_type": { "type": "string", "enum": ["per_kg", "per_box", "fixed"], "default": "per_kg", "description": "Tipo de custo: por kg, por caixa ou fixo" },
    "default_price": { "type": "number", "description": "Preço padrão" },
    "box_weight_kg": { "type": "number", "description": "Peso da caixa em kg (quando custo é por caixa)" },
    "category": { "type": "string", "enum": ["fruit", "vegetable", "greens", "other"], "default": "fruit", "description": "Categoria" },
    "status": { "type": "string", "enum": ["active", "inactive"], "default": "active" }
  },
  "required": ["name", "supplier_id", "unit_type", "cost_type"]
}
